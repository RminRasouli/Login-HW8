<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sos"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:onClick="Showinfo"
                android:src="@drawable/img_1"
                tools:ignore="UsingOnClickInXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35sp"
                android:layout_marginTop="130dp"
                android:text="Register"
                android:textSize="38dp" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/rectangle5" />

            <EditText
                android:id="@+id/g_fn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="40dp"
                android:hint="FULL NAME" />

            <EditText
                android:id="@+id/g_US"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="315dp"
                android:layout_marginRight="40dp"
                android:hint="USERNAME" />

            <EditText
                android:id="@+id/g_EM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="370dp"
                android:layout_marginRight="40dp"
                android:hint="EMAIL" />

            <EditText
                android:id="@+id/g_PS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="425dp"
                android:layout_marginRight="40dp"
                android:hint="PASSWORD" />

            <EditText
                android:id="@+id/g_COPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="480dp"
                android:layout_marginRight="40dp"
                android:hint="PASSWORD CONFIRM" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:weightSum="1"
                android:id="@+id/radioGroup"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Male"
                android:id="@+id/radioml"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="20dp"
                android:layout_marginTop="525dp"
                android:layout_marginLeft="35sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/radiofml"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="20dp"
                android:layout_marginTop="530dp"
                android:layout_marginLeft="110dp"/>


            <ImageButton
                android:id="@+id/Reg"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="610dp"
                android:onClick="register"
                android:src="@drawable/botum"
                android:visibility="visible" />

            <Button
                android:id="@+id/visi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Info"
                android:layout_marginTop="615dp"
                android:layout_marginLeft="25sp"
                android:onClick="Visible"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50sp"
                android:layout_marginLeft="248dp"
                android:layout_marginTop="610dp"
                android:src="@drawable/singup" />


            <TextView
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125sp"
                android:layout_marginTop="800dp"
                android:text="See Info"
                android:textSize="35sp"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/a2"
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:layout_marginTop="800dp"
                android:src="@drawable/rectangle5"
                android:visibility="visible" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="930dp"
                android:text="Full name : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="980dp"
                android:text="username : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="1030dp"
                android:text="Email : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="1080dp"
                android:text="password : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/a7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="1130dp"
                android:text="Confirm password : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/a8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="1180dp"
                android:text="Gender : "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />
            <!--    ***************************************************     -->
            <TextView

                android:id="@+id/TxtFN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150sp"
                android:layout_marginTop="930dp"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TxTUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150sp"
                android:layout_marginTop="980dp"
                android:text=" "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TxTEm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150sp"
                android:layout_marginTop="1030dp"
                android:text=" "
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TxtPAS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150sp"
                android:layout_marginTop="1080dp"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TxTCOPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="1130dp"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TxTGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="1180dp"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>